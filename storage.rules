rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files.
    // This allows your app to display images to any visitor.
    match /{allPaths=**} {
      allow read;
    }
    
    // Secure property image uploads
    // - Only authenticated users can upload.
    // - Files must be under 5MB.
    // - Files must be of type image (jpeg, png, webp).
    // - The path must match the structure `properties/USER_ID/FILENAME`
    match /properties/{userId}/{allPaths=**} {
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/(jpeg|png|webp)');
    }
  }
}
